mixin activity()
    .activity 
        .activity__body.container 
            h2.activity__title Field of activity
            form(action="").activity__form
                .activity__inputs 
                    .activity__input.first 
                        p.activity__name Name
                        input(type="text" required) 
                    .activity__input 
                        p.activity__name Last name
                        input(type="text" required)
                .activity__input 
                    p.activity__name E-mail
                    input(type="text" required)
                .activity__input 
                    p.activity__name Phone number
                    input(type="text" required)
                .activity__input 
                    p.activity__name Company name
                    input(type="text" required)
                .activity__input 
                    p.activity__name What’s your question?
                    select.activity__select(name="select")
                        option(value="0").activity__option 
                        option(value="0").activity__option Lorem ipsum, dolor sit amet consectetur adipisicing elit. Id, est! 
                        option(value="0").activity__option Lorem ipsum, dolor sit amet consectetur adipisicing elit. Id, est! 
